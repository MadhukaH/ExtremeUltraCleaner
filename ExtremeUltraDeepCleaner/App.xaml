<Application x:Class="ExtremeUltraDeepCleaner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:ExtremeUltraDeepCleaner.Views"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/DarkTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Value Converters -->
            <views:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <views:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <views:ProgressConverter x:Key="ProgressConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
