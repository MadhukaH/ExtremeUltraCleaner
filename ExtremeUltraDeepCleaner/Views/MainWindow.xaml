<Window x:Class="ExtremeUltraDeepCleaner.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ExtremeUltraDeepCleaner.ViewModels"
        mc:Ignorable="d"
        Title="Extreme Ultra Deep Cleaner - PRO" 
        Height="750" 
        Width="950"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Border Background="{StaticResource BackgroundBrush}" 
            CornerRadius="12"
            BorderBrush="{StaticResource PrimaryBrush}" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title Bar -->
                <RowDefinition Height="*"/>    <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" 
                  Background="{StaticResource SurfaceBrush}" 
                  Height="40"
                  MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center"
                           Margin="15,0">
                    <TextBlock Text="⚡" 
                              FontSize="20" 
                              Foreground="{StaticResource PrimaryBrush}"
                              Margin="0,0,10,0"/>
                    <TextBlock Text="EXTREME ULTRA DEEP CLEANER" 
                              FontSize="14" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="PRO" 
                              FontSize="10" 
                              FontWeight="Bold"
                              Foreground="{StaticResource AccentBrush}"
                              VerticalAlignment="Top"
                              Margin="5,0,0,0"/>
                </StackPanel>

                <!-- Window Controls -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal">
                    <Button Content="─" 
                           Style="{StaticResource TitleBarButton}"
                           Click="MinimizeButton_Click"
                           FontSize="16"/>
                    <Button Content="✕" 
                           Style="{StaticResource CloseButton}"
                           Click="CloseButton_Click"
                           FontSize="16"/>
                </StackPanel>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="30,20,30,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="Auto"/> <!-- Progress Circle -->
                    <RowDefinition Height="Auto"/> <!-- Step Counter -->
                    <RowDefinition Height="Auto"/> <!-- Progress Bar -->
                    <RowDefinition Height="Auto"/> <!-- Status -->
                    <RowDefinition Height="*"/>    <!-- Log Panel -->
                    <RowDefinition Height="Auto"/> <!-- Summary -->
                    <RowDefinition Height="Auto"/> <!-- Button -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0" 
                          Text="SYSTEM CLEANUP" 
                          Style="{StaticResource HeaderText}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20"/>

                <!-- Circular Progress Indicator -->
                <Grid Grid.Row="1" 
                      Width="180" 
                      Height="180"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20">
                    <!-- Background Circle -->
                    <Ellipse Stroke="{StaticResource Surface2Brush}" 
                            StrokeThickness="12"
                            Width="180" 
                            Height="180"/>
                    
                    <!-- Progress Circle -->
                    <Ellipse x:Name="ProgressCircle"
                            Stroke="{StaticResource PrimaryGradient}" 
                            StrokeThickness="12"
                            Width="180" 
                            Height="180"
                            RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <RotateTransform Angle="-90"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>

                    <!-- Percentage Text -->
                    <TextBlock Text="{Binding ProgressPercentage, StringFormat={}{0:F0}%}" 
                              FontSize="40" 
                              FontWeight="Bold"
                              Foreground="{StaticResource PrimaryBrush}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Grid>

                <!-- Step Counter -->
                <TextBlock Grid.Row="2"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,20">
                    <Run Text="Step " 
                         FontSize="20" 
                         Foreground="{StaticResource TextSecondaryBrush}"/>
                    <Run Text="{Binding CurrentStep, Mode=OneWay}" 
                         FontSize="24" 
                         FontWeight="Bold"
                         Foreground="{StaticResource PrimaryBrush}"/>
                    <Run Text=" / 18" 
                         FontSize="20" 
                         Foreground="{StaticResource TextSecondaryBrush}"/>
                </TextBlock>

                <!-- Linear Progress Bar -->
                <ProgressBar Grid.Row="3" 
                            Value="{Binding ProgressPercentage}"
                            Maximum="100"
                            Height="8"
                            Margin="0,0,0,20">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Background" Value="{StaticResource Surface2Brush}"/>
                            <Setter Property="Foreground" Value="{StaticResource PrimaryGradient}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ProgressBar">
                                        <Grid>
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="4"/>
                                            <Border Background="{TemplateBinding Foreground}" 
                                                   CornerRadius="4"
                                                   HorizontalAlignment="Left">
                                                <Border.Width>
                                                    <MultiBinding Converter="{StaticResource ProgressConverter}">
                                                        <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="Value"/>
                                                        <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="ActualWidth"/>
                                                    </MultiBinding>
                                                </Border.Width>
                                            </Border>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>

                <!-- Current Status -->
                <TextBlock Grid.Row="4" 
                          Text="{Binding CurrentStatus}"
                          Style="{StaticResource StatusText}"
                          Margin="0,0,0,20"/>

                <!-- Log Panel -->
                <Border Grid.Row="5" 
                       Background="{StaticResource SurfaceBrush}" 
                       CornerRadius="8"
                       Padding="15"
                       Margin="0,0,0,20">
                    <ScrollViewer x:Name="LogScrollViewer"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding LogMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,3">
                                        <TextBlock Text="{Binding FormattedTime}" 
                                                  Foreground="{StaticResource TextSecondaryBrush}"
                                                  FontSize="11"
                                                  FontFamily="Consolas"
                                                  Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding LevelIcon}" 
                                                  Foreground="{Binding LevelColor}"
                                                  FontSize="12"
                                                  Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Message}" 
                                                  Foreground="{StaticResource TextBrush}"
                                                  FontSize="12"
                                                  FontFamily="Consolas"
                                                  TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Summary Panel -->
                <Border Grid.Row="6" 
                       Background="{StaticResource Surface2Brush}"
                       CornerRadius="8"
                       Padding="20"
                       Margin="0,0,0,20"
                       Visibility="{Binding ShowSummary, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Files Deleted -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding Summary.TotalFilesDeleted}" 
                                      FontSize="28" 
                                      FontWeight="Bold"
                                      Foreground="{StaticResource SuccessBrush}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Files Deleted" 
                                      FontSize="12" 
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Space Freed -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding Summary.SpaceFreedGB}" 
                                      FontSize="28" 
                                      FontWeight="Bold"
                                      Foreground="{StaticResource PrimaryBrush}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Space Freed" 
                                      FontSize="12" 
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Time Taken -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding Summary.TimeTakenFormatted}" 
                                      FontSize="28" 
                                      FontWeight="Bold"
                                      Foreground="{StaticResource AccentBrush}"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Time Taken" 
                                      FontSize="12" 
                                      Foreground="{StaticResource TextSecondaryBrush}"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Start Button -->
                <Button Grid.Row="7" 
                       Content="START DEEP CLEAN"
                       Style="{StaticResource ModernButton}"
                       Command="{Binding StartCleaningCommand}"
                       IsEnabled="{Binding IsCleaningInProgress, Converter={StaticResource InverseBoolConverter}}"
                       HorizontalAlignment="Center"
                       Padding="60,18"
                       FontSize="18"/>
            </Grid>
        </Grid>
    </Border>
</Window>
